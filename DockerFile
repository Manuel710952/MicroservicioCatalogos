FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build-env-des


WORKDIR /app


EXPOSE 8080

COPY *.sln .
RUN dotnet restore ./MicroservicioCatalogos
RUN dotnet restore ./MicroservicioCatalogos/MicroservicioCatalogos.csproj


COPY . .

RUN dotnet build --configuration Release --no-restore

RUN dotnet publish -c Release --no-build --output /app/publish


FROM mcr.microsoft.com/dotnet/aspnet:6.0

WORKDIR /app


COPY --from=build-env-des /app/publish .


ENTRYPOINT ["dotnet", "MicroservicioCatalogos.dll"]
